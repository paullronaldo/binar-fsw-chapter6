<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../head.ejs') %>
    <title>Player Detail</title>
  </head>
  <body>
    <div class="container mt-5">
      <h3>Player Detail</h3>
      <a href="/players"><< Back to Players list</a>
      <div class="alert alert-info mt-3" role="alert">
        <p>
          <strong>DELETE</strong> operation - (ON CASCADE) Table
          <samp>user_game</samp>, <samp>user_game_biodata</samp> and
          <samp>user_game_history</samp>.
        </p>
      </div>
      <div class="mt-5">
        <a href="update-player/<%= player.id %>">
          <button class="btn btn-outline-success">Update</button>
        </a>
        <a href="delete/<%= player.id %>">
          <button class="btn btn-outline-danger">Delete</button>
        </a>
      </div>
      <h5 class="mt-3">Details</h5>
      <table class="table mt-3">
        <tbody>
          <tr>
            <th>Id</th>
            <td><%= player.id %></td>
          </tr>
          <tr>
            <th>Username</th>
            <td><%= player.username %></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><%= player.email %></td>
          </tr>
          <tr>
            <th>First Name</th>
            <td><%= player.PlayerBio.first_name %></td>
          </tr>
          <tr>
            <th>Last Name</th>
            <td><%= player.PlayerBio.last_name %></td>
          </tr>
          <tr>
            <th>City</th>
            <td><%= player.PlayerBio.city %></td>
          </tr>
        </tbody>
      </table>
      <h5>Activities</h5>
      <table class="table mt-3">
        <thead>
          <tr>
            <th>Level</th>
            <th>Experience</th>
            <th>Last active</th>
          </tr>
        </thead>
        <tbody>
          <% player.PlayerHistories.forEach(i => { %>
          <tr>
            <td><%= i.level %></td>
            <td><%= i.experience %></td>
            <td><%= i.last_login %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>